{
  "name": "sucker",
  "version": "0.1.0",
  "description": "A modern TypeScript-based web framework",
  "main": "dist/app.js",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc",
    "dev": "node --env-file=.env --watch -r ts-node/register src/app.ts",
    "start": "node dist/app.js",
    "lint": "oxlint src/",
    "lint:fix": "oxlint --fix src/",
    "format": "prettier --write src/**/*.ts",
    "check": "npm run lint && npm run format && npm run build"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "web-framework",
    "blog",
    "http-server",
    "middleware",
    "router"
  ],
  "author": "Jackie Tsien",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "oxlint": "^1.8.0",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.4.1"
  }
}
